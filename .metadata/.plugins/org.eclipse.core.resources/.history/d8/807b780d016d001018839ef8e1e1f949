package com.coforge.training.springcore.config;

import org.springframework.context.annotation.Bean;
import org.springframework.context.annotation.ComponentScan;
import org.springframework.context.annotation.Configuration;

import com.coforge.training.springcore.model.Product;

/**
* Author :Vivek.Patel
* Date   :Jul 30, 2025
* Time   :10:15:08â€¯AM
* Project:spring-core
*/
@Configuration
@ComponentScan(basePackages = "com.coforge.training.springcore.model")
public class ProductConfig {
	@Bean
	public Product product1() {
		Product product=new Product();
		product.setName("Laptop");
		product.setPrice(1500.00);
		return product;
	}
	@Bean
	public Product product2() {
		Product product=new Product();
		product.setName("Phone");
		product.setPrice(13500.00);
		return product;
	}
	@Bean
	public Product product3() {
		Product product=new Product();
		product.setName("Tablet");
		product.setPrice(145500.00);
		return product;
	}
}
